<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PZ20.Views.Dialogs.ConfirmationDialog"
        WindowStartupLocation="CenterOwner"
        Title="ConfirmationDialog">
    <StackPanel Orientation="Vertical" Spacing="15" HorizontalAlignment="Stretch" Margin="15">
        <TextBlock Name="Header" FontSize="18" FontWeight="Bold" />
        <TextBlock Name="Description" />
        <StackPanel Orientation="Horizontal" Spacing="8">
            <Button Content="Отмена" IsCancel="True" Click="CancelClick" />
            <Button Content="Ок" IsDefault="True" Click="ConfirmClick" />
        </StackPanel>
    </StackPanel>
</Window>